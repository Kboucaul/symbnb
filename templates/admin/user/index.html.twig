{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5">Gestion des utilisateurs</h1>
    <table class="table table-hover" id="table-user">
        <thead>
            <tr>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Introduction</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            {% for user in pagination.data %}
            <div class="row">
                <div class="col-1"> 
                    <td>{{user.firstName}}</td>
                </div>
                <div class="col-1"> 
                    <td>{{user.lastName}}</td>
                </div>
                <div class="col-1"> 
                    <td>{{user.email}}</td>
                </div>
                <div class="col-1"> 
                    <td>{{user.introduction}}</td>
                </div>
                 {% set desc = user.description|striptags|trim|slice(0, 50)~" [...]" %}
                 <div class="col-1">
                    <td>{{ desc }}</td>
                 </div>
                 <div class="col-1">  
                    <td>
                        <a href="#" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                        <a href="#" class="btn btn-danger" id="delete"><i class="fas fa-trash"></i></a>
                    </td>
                 </div>
            </div>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    {% include 'admin/partial/pagination.html.twig' with {'route': 'admin_users_index', 'page': page, 'pages': pagination.pages} %}
</div>
{% endblock %}


