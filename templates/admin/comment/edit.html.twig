{% extends 'admin/base.html.twig' %}

{% block title %}Modification du commentaire de {{comment.author.firstName}} pour l'annonce {{comment.ad.title}}{% endblock %}

{% block body %}

<div class="container">
    <h1 class="mb-5">Modification du commentaire de {{comment.author.firstName}} pour l'annonce {{comment.ad.title}}</h1>
    <div class="alert alert-info">
        <strong>Annonce liée : </strong>{{comment.ad.title}}<br/>
        <strong>Auteur : </strong>{{comment.author.fullName}}<br/>
        <strong>Posté le : </strong>{{comment.createdAt | date('d/m/Y')}}<br/>
        <strong>Note donnée : </strong>{{comment.rating}}
    </div>
    
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-primary">
        <i class="fas fa-check"></i>
       Enregistrer les modifications
    </button>
    {{ form_end(form) }}
</div>
{% endblock %}