<span class="rating">
    {% if rating == 0 %}
        {% for i in 1..5 %}
            <i class="far fa-star"></i>
        {% endfor %}
    {% elseif rating == 5 %}
        {% for i in 1..5 %}
            <i class="fas fa-star"></i>
        {% endfor %}
    {% else %}
        {% set diff = 5 - rating %}
        {% for i in 1..rating %}
            <i class="fas fa-star"></i>
        {% endfor %}
        {% for i in 1..diff %}
            <i class="far fa-star"></i>
        {% endfor %}
    {% endif %}
</span>